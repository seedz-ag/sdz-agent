{
  "coveragePathIgnorePatterns": [
    "index.ts",
    "config.ts"
  ],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)": "<rootDir>/src/$1"
  },
  "modulePathIgnorePatterns": [],
  "testPathIgnorePatterns": ["dist"],
  "collectCoverageFrom": ["src/**/*.{ts,js}"],
  "coverageDirectory": "coverage",
  "testEnvironment": "node",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "lines": 80,
      "functions": 80,
      "statements": -10
    }
  }
}
